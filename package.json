{
	"name": "riscv-extension",
	"displayName": "RISC-V Extension",
	"description": "RISC-V Operating System development extension",
	"version": "0.0.4",
	"publisher": "rihong",
	"engines": {
		"vscode": "^1.5.0"
	},
	"categories": [
		"Programming Languages",
		"Snippets"
	],
	"contributes": {
		"languages": [
			{
				"id": "riscv",
				"aliases": [
					"RISC-V Assembly",
					"riscv"
				],
				"extensions": [
					".S",
					".s",
					".riscv",
					".asm"
				],
				"configuration": "./configs/riscv-language-configuration.json"
			},
			{
				"id": "linkerscript",
				"aliases": [
					"Linker Script",
					"linkerscript"
				],
				"extensions": [
					".ld",
					".lds",
					".dld"
				],
				"configuration": "./configs/linker-language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "riscv",
				"scopeName": "source.riscv",
				"path": "./syntaxes/riscv.tmLanguage.xml"
			},
			{
				"language": "linkerscript",
				"scopeName": "source.ld",
				"path": "./syntaxes/linkerscript.tmLanguage.json"
			}
		],
		"snippets": [
			{
				"language": "riscv",
				"path": "./snippets/snippets.json"
			}
		]
	},
	"icon": "images/icon.png",
	"homepage": "https://github.com/Artessay/RISCV-Extension",
	"repository": {
		"type": "git",
		"url": "https://github.com/Artessay/RISCV-Extension"
	},
	"bugs": {
		"url": "https://github.com/Artessay/RISCV-Extension/issues",
		"email": "rihong.edu@outlook.com"
	},
	"dependencies": {
		"yamljs": "^0.3.0"
	}
}
